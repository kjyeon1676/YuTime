h2(style="margin-left:40%;") 개인설정
hr
h1 [#{Rank}] #{EMail}
form(name="preference" method="post")
  div(style="position:absolute;right:10%;top:100px;font-size:20px;")
    div(style="float:left; margin-right:10px;") 자동 로그인
    -if(cook=='true'){
      input(type="checkbox" id="autologin" name="autologin" style="width:25px; height:25px;" checked)
    -} else {
      input(type="checkbox" id="autologin" name="autologin" style="width:25px; height:25px;")
    -}
  br
  table
    tr
      td(style="min-width:160px; font-size:18px; padding-bottom:10px") 기존 비밀번호
      td(style="width:100%; padding-bottom:10px")
        input(type="password" name="pw" id="pw" placeholder="기존 비밀번호" class="form-control")
    tr 
      td(style="padding-bottom:10px; font-size:18px;") 새로운 비밀번호
      td(style="padding-bottom:10px;")
        input(type="password" name="npw" id="npw" placeholder="새로운 비밀번호" class="form-control")
    tr 
      td(style="padding-bottom:10px; font-size:16px;") 새로운 비밀번호 확인
      td(style="padding-bottom:10px;")
        input(type="password" name="npwc" id="npwc" placeholder="새로운 비밀번호 확인" class="form-control")
    tr 
      td(style="padding-bottom:10px; font-size:18px;") 이름[닉네임]
      td(style="padding-bottom:10px;")
        input(type="text" name="NickName" id="NickName" placeholder="이름[닉네임]" class="form-control" value="#{Data[0].Name}")
    tr 
      td(style="padding-bottom:10px; font-size:18px;") 학년
      td(style="padding-bottom:10px;")
        SELECT(class="form-control" name="Grade" id="Grade" )
          -if(Data[0].Grade==1){
            option(value="1" selected) 1학년
          -} else {
            option(value="1") 1학년
          -}if(Data[0].Grade==2){
            option(value="2" selected) 2학년
          -} else {
            option(value="2") 2학년
          -}if(Data[0].Grade==3){
            option(value="3" selected) 3학년
          -} else {
            option(value="3") 3학년
          -}if(Data[0].Grade==4){
            option(value="4" selected) 4학년
          -} else {
            option(value="4") 4학년
          -}if(Data[0].Grade==5){
            option(value="5" selected) 5학년
          -} else {
            option(value="5") 5학년
          -}if(Data[0].Grade==6){
            option(value="6" selected) 6학년
          -} else {
            option(value="6") 6학년
          -}if(Data[0].Grade==7){
            option(value="7" selected) 6학년 이상
          -} else {
            option(value="7") 6학년 이상
          -}
    tr 
      td(style="padding-bottom:10px; font-size:18px;") 전공
      td(style="padding-bottom:10px;")
        input(type="text" name="Major" id="Major" placeholder="전공" class="form-control" value="#{Data[0].Major}")
    tr 
      td(style="padding-bottom:10px; font-size:18px;") 복수전공 1
      td(style="padding-bottom:10px;")
        input(type="text" name="DoubleMajor1" id="DoubleMajor1" placeholder="복수전공 1" class="form-control" value="#{Data[0].DoubleMajor1}")
    tr 
      td(style="padding-bottom:10px; font-size:18px;") 복수전공 2
      td(style="padding-bottom:10px;")
        input(type="text" name="DoubleMajor2" id="DoubleMajor2" placeholder="복수전공 2" class="form-control" value="#{Data[0].DoubleMajor2}")
    tr 
      td(style="padding-bottom:10px; font-size:18px;") 부전공
      td(style="padding-bottom:10px;")
        input(type="text" name="Minor" id="Minor" placeholder="부전공" class="form-control" value="#{Data[0].Minor}") 
  input(type="button" onclick="preference_submit()" class="form-control" value="수정")
  
